page {
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  padding: 0rpx;
  display: flex;
  justify-content: start;
  flex-direction: column;
}  
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
  }

.view_line {
  background-color: var(--color_grey_e8);
  width: 100%;
  height: 0.5rpx;
}

.search_input {
  background-color: var(--color_grey_dd);
  opacity: 0.5;
  width: 100%;
  height: 60rpx;
  z-index: 1;
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  font-size: 30rpx;
}

.search_container {
  display: flex;
  height: auto;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.image_search {
  position: absolute;
  right: 10%;
  z-index: 2;
  top: 45rpx;
  width: 30rpx;
  height: 30rpx;
}

.view_menu {
  display: flex;
  flex-direction: row;
  height: auto;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 40rpx;
  align-items: center;
}

.image_menu {
  width: 50rpx;
  height: 50rpx;
}

.view_orderby {
  display: flex;
  flex: 1;
  justify-content: flex-end;
  flex-direction: row;
  align-items: center;
}

.text_orderby {
  font-size: 30rpx;
  color: var(--color_grey_666);
}

.image_orderby {
  width: 20rpx;
  height: 20rpx;
}

.view_note {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-content: flex-start;
  flex-direction: column;
}

.text_title {
  width: 100%;
  display: -webkit-box;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-weight: bold;
  color: var(--color_grey_666);
}

.text_time {
  color: var(--color_grey_666);
  font-size: 30rpx;
}

.text_content {
  color: var(--color_grey_999);
  font-size: 30rpx;
  display: -webkit-box;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  margin-left: 20rpx;
}

.view_bottom {
  width: 100%;
  height: 80rpx;
  display: flex;
  border-width: 1rpx 0rpx 0 0;
  border-color: var(--color_grey_dd);
  border-style: solid;
  position: fixed;
  bottom: 0;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.text_count {
  display: flex;
  font-size: 50rpx;
  font-weight: 600;
  flex-direction: column;
  align-items: center;
  color: white;
}
.image_insert_note {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 50rpx;
}

.view_note_grid {
  width: 27%;
  height: 150rpx;
  padding: 2%;
  margin-left: 1%;
  float: left;
  margin-top: 1%;
  display: flex;
  flex-direction: column;
  border: 1rpx solid var(--color_grey_dd);
  border-radius: 10rpx;
}

.text_title_grid {
  width: 100%;
  font-weight: bold;
  font-size: 20rpx;
  color: var(--color_grey_666);
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.text_content_grid {
  width: 100%;
  font-weight: bold;
  font-size: 20rpx;
  color: var(--color_grey_666);
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.text_time_grid {
  width: 100%;
  font-weight: bold;
  font-size: 20rpx;
  color: var(--color_grey_666);
}