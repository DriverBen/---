page {
  height: 100%;
  width: 100%;
}
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
  }
.view_container {
  height: 100%;
  display: flex;
  flex-direction: column;
  width: 90%;
  padding: 5%;
}

#textarea_content {
  border-width: 1rpx;
  border-color: var(--color_grey_dd);
  border-style: solid;
  border-radius: 10rpx;
  width: 96%;
  margin-top: 20rpx;
  padding: 2%;
}

.input_title {
  border-width: 1rpx;
  border-color: var(--color_grey_dd);
  border-style: solid;
  border-radius: 10rpx;
  width: 96%;
  margin-top: 20rpx;
  padding: 2%;
}
.btn_commit{
  background-color:transparent;
  border-style: solid;
  border-color: var(--color_grey_dd);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  color: var(--color_white);
  font-weight: 600;
  font-size: 40rpx;
  margin-top: 40rpx;
  text-align: center;
}